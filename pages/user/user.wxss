/* pages/user/users.wxss */

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  box-sizing: border-box;
  color: #222222;
}

.info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 50rpx 0 110rpx 0;
}

.avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.nickname {
  color: #bb8877;
  margin: 20rpx 0 10rpx 0;
}

.motto {
  color: #778899;
  margin: 10rpx 0 0 0;
}

.div{
  height: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background-color: #e1e1e1;
  border: 2px #ffffff solid;
}

.icon {
  width: 80rpx;
  height: 80rpx;
}

.text {
  width: 40%;
  color:#000000;
  text-align: center;
  font-size: 42rpx;
  font-weight: 400;
  margin: 0 60rpx 0 60rpx;
}