.div {
  height: 130rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: 1px solid #dddddd;
}

.left {
  height: 100%;
  width: 60%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: baseline;
  padding: 0 0 0 40rpx;
}

.mainHead {
  text-align: center;
  font-size: 48rpx;
  margin:  0 0 15rpx 0;
}

.viceHead {
  text-align: center;
  font-size: 36rpx;
}

.right {
  height: 100%;
  width: 36%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}